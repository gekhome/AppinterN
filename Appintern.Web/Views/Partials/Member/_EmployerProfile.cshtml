@inherits Umbraco.Web.Mvc.UmbracoViewPage<Appintern.Web.ViewModels.EmployerProfileModel>

@using Umbraco.Web
@using System.Web.Mvc

@{
    var member = System.Web.Security.Membership.GetUser();

    string successMessage = "";
    if (ViewData["successMessage"] != null)
    {
        successMessage = ViewData["successMessage"].ToString();
    }
}

@*<div class="contact-clean">*@
    <div class="container">
        @{
            using (Html.BeginUmbracoForm("SubmitEmployerForm", "Profiles", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @RenderProfileForm()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>@Html.ValidationSummary()</strong>
                    </div>
                }
                if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>@successMessage</strong>
                    </div>
                }
            }
        }
    </div>
@*</div>*@


@helper RenderProfileForm()
{
    @Html.HiddenFor(m => m.MemberId)

<div id="user-login">
    <div class="form-header" style="margin-bottom:20px">
        <img src="~/Images/user-circle-gray.png" width="100" height="70" style="margin:10px 20px 10px 10px" />
        <font class="form-title">Employer profile data</font>
        @*<hr class="form-line" />*@
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.TaxNumber, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.TaxNumber, new { @class = "form-control", placeholder = "Tax Number..." })
        @Html.ValidationMessageFor(m => m.TaxNumber)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.CompanyName, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Company Name..." })
        @Html.ValidationMessageFor(m => m.CompanyName)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.ContactPerson, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control", placeholder = "Contact Person..." })
        @Html.ValidationMessageFor(m => m.ContactPerson)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.Headquarters, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.Headquarters, new { @class = "form-control", placeholder = "Home base location..." })
        @Html.ValidationMessageFor(m => m.Headquarters)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.Country, new { @class = "control-label col-md-8" })
