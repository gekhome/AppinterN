        @Html.ValidationMessageFor(m => m.JobSector1)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.JobSector2, new { @class = "control-label col-md-8" })
        @Html.DropDownListFor(m => m.JobSector2, Model.JobSectorList, "Select a job sector...", new { @class = "form-control", style = "font-size:16px;min-width:200px;padding:1px" })
        @Html.ValidationMessageFor(m => m.JobSector2)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.JobSector3, new { @class = "control-label col-md-8" })
        @Html.DropDownListFor(m => m.JobSector3, Model.JobSectorList, "Select a job sector...", new { @class = "form-control", style = "font-size:16px;min-width:200px;padding:1px" })
        @Html.ValidationMessageFor(m => m.JobSector3)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.Phone, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone number..." })
        @Html.ValidationMessageFor(m => m.Phone)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.Website, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "Website..." })
        @Html.ValidationMessageFor(m => m.Website)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(m => m.SocialMedia, new { @class = "control-label col-md-8" })
        @Html.TextBoxFor(m => m.SocialMedia, new { @class = "form-control", placeholder = "Social media..." })
        @Html.ValidationMessageFor(m => m.SocialMedia)
    </div>
    <div class="form-group">
        <button class="btn btn-primary" name="profile" type="submit">submit </button>
        <button class="btn btn-success" type="reset" onclick="refreshPage()">reset </button>
        <a class="btn btn-warning" href="/" style="margin-top:16px">Return to Home Page</a>
    </div>
</div>
}

<script type="text/javascript">

    function refreshPage() {
        window.location.reload(true);
    }

</script>
