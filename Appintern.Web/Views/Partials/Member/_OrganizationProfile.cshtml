@inherits Umbraco.Web.Mvc.UmbracoViewPage<Appintern.Web.ViewModels.OrganizationProfileModel>

@using Umbraco.Web
@using System.Web.Mvc

@{
    var member = System.Web.Security.Membership.GetUser();
    string imageUrl = !string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/img/user.png";
}

<div class="container" style="background-color:white">
    <div style="margin: 0px auto 20px auto">
        <img src="@(imageUrl)" width="120" height="120" style="margin:10px 20px 10px 10px;object-fit:cover" />
        <font class="form-title">@Model.Name</font>
        @Html.HiddenFor(m => m.MemberId)
    </div>
    <div style="margin:10px auto 10px auto;font-size:18px">
        <div class="col-md-12">
            @Html.LabelFor(m => m.TaxNumber, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.TaxNumber, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.OrganizationName, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.OrganizationName, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.ContactPerson, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.ContactPerson, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Headquarters, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.Headquarters, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Country, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.Country, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.JobSector, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.JobSector, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.Phone, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Website, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.Website, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.SocialMedia, new { @class = "control-label col-md-4" })
            @Html.DisplayFor(m => m.SocialMedia, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.OrganizationInfo, new { @class = "control-label col-md-4" })
        </div>
        <div class="col-md-10" style="margin-bottom:20px;margin-left:20px">
            @Html.Raw(Model.OrganizationInfo)
        </div>
        <hr style="height:2px;border-width:0;color:gray;background-color:gray" />
    </div>
</div>


