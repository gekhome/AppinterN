@model Search3ViewModel
@using Appintern.Core.Models

@using (Ajax.BeginForm("SubmitSearch3Form", "Search", null, new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "search-results"
}))
{
    @Html.HiddenFor(m => m.DocTypeAliases)
    @Html.HiddenFor(m => m.FieldPropertyAliases)
    @Html.HiddenFor(m => m.PageSize)
    @Html.HiddenFor(m => m.PagingGroupSize)

<head>
    <style>
        /*yeap blue bakground fix input here also*/
        .dropdown-menu > .active > a {
            background-image: none;
            background-color: whitesmoke;
        }
    </style>
</head>

<div class="container">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">

                @Html.TextBoxFor(m => m.SearchTerm, new { placeholder = "Search...", @class = "form-control col-md-8", style = "max-height:34px" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.JobSector, new { @class = "control-label col-md-5" })
                @Html.DropDownListFor(m => m.JobSector, Model.JobSectors, "All", new { @class = "form-control", style = "font-size:16px;padding:1px;max-height:34px" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.Duration, new { @class = "control-label col-md-5" })
                @Html.DropDownListFor(m => m.Duration, Model.Durations, "All", new { @class = "form-control", style = "font-size:16px;padding:1px;max-height:34px" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.Commitment, new { @class = "control-label col-md-5" })
                @Html.DropDownListFor(m => m.Commitment, Model.Commitments, "All", new { @class = "form-control", style = "font-size:16px;padding:1px;max-height:34px" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.Compensation, new { @class = "control-label col-md-5" })
                @Html.DropDownListFor(m => m.Compensation, Model.Compensations, "All", new { @class = "form-control", style = "font-size:16px;padding:1px;max-height:34px" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-5" })
                @Html.DropDownListFor(m => m.Status, Model.Statuses, "All", new { @class = "form-control", style = "font-size:16px;padding:1px;max-height:34px" })
            </div>
            <div class="col-md-12" style="margin-top:10px">
                <button class="btn btn-primary" id="submit-button">Search <i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <aside class="sidebar">
            <div class="row" id="search-results" style="margin-left:2px">
                @{ Html.RenderAction("RenderSearch3Results", "Search", new { Model = Model.SearchResults }); }
            </div>
        </aside>
    </div>
</div>
}
